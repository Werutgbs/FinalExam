<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:scaleY="0.9"
    android:scaleX="0.9"
    android:background="@color/white"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/recipe_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <ToggleButton
        android:id="@+id/favorite_recipe_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:textOff=""
        android:textOn=""
        app:layout_constraintEnd_toEndOf="@+id/recipe_background"
        app:layout_constraintTop_toTopOf="@+id/recipe_background" />

    <TextView
        android:id="@+id/recipe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="@drawable/rounded_edittext"
        android:textStyle="bold"
        android:layout_margin="30dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/recipe_background"
        app:layout_constraintStart_toStartOf="@+id/recipe_background" />
</androidx.constraintlayout.widget.ConstraintLayout>